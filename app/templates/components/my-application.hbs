<nav class="navbar navbar-default">
  <div class="container-fluid">
    {{navbar-header}}

    <div class="collapse navbar-collapse" id="navigation">
      <ul class="nav navbar-nav">
        {{#if isAuthenticated}}
          <li>{{#link-to "new" class='btn'}}Create New Post{{/link-to}}</li>
        {{/if}}
        <li>{{#link-to "posts" class='btn'}}Posts{{/link-to}}</li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if isAuthenticated}}
        <li>{{#link-to "change-password" class='btn'}}Change Password{{/link-to}}</li>
